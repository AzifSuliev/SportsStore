@model Category

<form method-post>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 style="color:black">Создать категорию</h2>
            <hr style="color:black" />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label style="color:black" asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label style="color:black" asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="=row pt-3">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" style="width:100px;height:40px">Создать</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:100px;height:40px">Назад</a>
            </div>
        </div>
    </div>
</form>