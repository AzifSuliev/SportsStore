@model List<Product>

<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-6">
            @if (Model != null && Model.Count > 0)
            {
                <h1 style="color:Black">@Model.FirstOrDefault().Category.Name</h1>
            }
            else
            {
                <h1 style="color:black">Пока нет ни одного товара этой категории</h1>
            }
        </div>
    </div>
    <div class="row">
        @foreach (Product product in Model.OrderBy(u => u.Id))
        {
            <div class="col-lg-4 col-md-6 mt-4">
                <div class="card" style="width: 300px; height:500px;">
                    @if (product.ProductImages != null && product.ProductImages.Count > 0)
                    {
                        <img style="height: auto" src="@product.ProductImages.FirstOrDefault().ImageURL" class="card-img-top rounded" />
                    }
                    else
                    {
                        <img src="/images/empty.png" class="card-img-top" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6 class="card-text">@product.Price.ToString("c")</h6>                     
                        <p>@product.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
