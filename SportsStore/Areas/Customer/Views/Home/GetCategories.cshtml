@model List<Category>

<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-6">
            <h1 style="color:Black">Категории товара</h1>
        </div>
        <div class="col-md-6 text-end pt-4">           
        </div>
    </div>
    <div class="row">
        @foreach (Category category in Model.OrderBy(u => u.DisplayOrder))
        {
            <div class="col-lg-4 col-md-6 mt-4">
                <div class="card" style="width: 18rem;">
                    @if (string.IsNullOrEmpty(category.ImageURL))
                    {
                        <a asp-area="Customer" asp-controller="Home" asp-action="ShowItemsOfCategoryForCustomer" asp-route-id="@category.Id">
                            <img src="/images/empty.png" class="card-img-top" /> 
                        </a>
                    }
                    else
                    {
                        <a asp-area="Customer" asp-controller="Home" asp-action="ShowItemsOfCategoryForCustomer" asp-route-id="@category.Id">
                            <img src="@category.ImageURL" class="card-img-top">
                        </a>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>                      
                    </div>
                </div>
            </div>
        }
    </div>
</div>
