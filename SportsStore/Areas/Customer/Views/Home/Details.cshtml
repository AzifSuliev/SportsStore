@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="text-white-50 fw-semibold mb-0">@Model.Product.Name</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Главная страница</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">


                        @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 0)
                        {

                            <div id="carouselExampleIndicators" class="carousel slide">
                                <div class="carousel-indicators">
                                    @foreach (var imageWithIndex in Model.Product.ProductImages.
                                    Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index"
                                                class="@(imageWithIndex.Index == 0 ? "active":"")" aria-current="true" aria-label="Slide 1"></button>
                                    }
                                </div>
                                <div class="carousel-inner">
                                    @foreach (var imageWithIndex in Model.Product.ProductImages.
                                    Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <div class="@(imageWithIndex.Index == 0 ? "carousel-item active" : "carousel-item")">
                                            <img src="@imageWithIndex.Image.ImageURL" class="d-block w-100" alt="...">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        }


                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <h5 class="badge">Категория товара: @Model.Product.Category.Name</h5>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-5 bg-white border-bottom">
                                <div class="text-dark text-opacity-50 fw-semibold">Цена</div>
                            </div>                           
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-5 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>                            
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">Описание</p>
                            <p>@Model.Product.Description</p>
                        </div>
                        <div class="row pr-2 my-2 mx-1">
                            <span class="input-group-text bg-primary text-white border-0 fw-semibold" style="width:120px;height:40px"
                                  id="inputGroup-sizing-default">
                                Количество
                            </span>
                            <input asp-for="Count" type="number" value="0" class="form-control text-end mx-2" style="width:60px;border-color:black"
                                   aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />                           
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"
                                        class="btn btn-primary bg-gradient py-2 text-uppercase fw-semibold" style="width:400px">
                                    Добавить в корзину
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>