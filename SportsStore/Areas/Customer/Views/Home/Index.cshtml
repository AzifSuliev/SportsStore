@model IEnumerable<Product>

<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-6">
            <h1 style="color:Black">Список товаров</h1>
        </div>       
    </div>
    <div class="row">
        @foreach (Product product in Model)
        {
            <div class="col-lg-4 col-md-6 mt-4">
                <div class="card" style="width: 300px; height:500px;">
                    @if (product.ProductImages != null && product.ProductImages.Count > 0)
                    {
                        <img style="height: auto" src="@product.ProductImages.FirstOrDefault().ImageURL" class="card-img-top rounded" />
                    }
                    else
                    {
                        <img src="/images/empty.png" class="card-img-top" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6 class="card-text">@product.Price.ToString("c")</h6>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Подробнее</a>                     
                        <p>@product.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
