@model List<Product>

<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-6">
            <h1 style="color:Black">Список товаров</h1>
        </div>
        <div class="col-md-6 text-end pt-4">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Добавить товар
            </a>
        </div>
    </div>
    <div class="row">
        @foreach (Product product in Model)
        {
            <div class="col-lg-4 col-md-6 mt-4">
                <div class="card" style="width: 18rem;">
                    @if (product.ProductImages != null && product.ProductImages.Count > 0)
                    {
                        <img src="@product.ProductImages.FirstOrDefault().ImageURL" class="card-img-top rounded" />
                    }
                    else
                    {
                        <img src="/images/empty.png" class="card-img-top" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        @*  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> *@
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Изменить</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Удалить</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
