@model List<Category>

<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="col-md-6">
            <h1 style="color:Black">Категории товара</h1>
        </div>
        <div class="col-md-6 text-end pt-4">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Добавить категорию
            </a>
        </div>
    </div>
    <div class="row">
        @foreach (Category category in Model.OrderBy(u => u.DisplayOrder))
        {
            <div class="col-lg-4 col-md-6 mt-4">
                <div class="card" style="width: 18rem;">
                    @if (string.IsNullOrEmpty(category.ImageURL))
                    {
                        <a asp-controller="Category" asp-action="ShowItemsOfCategory" asp-route-id="@category.Id">
                            <img src="/images/empty.png" class="card-img-top" /> // изображение по умолчанию
                        </a>
                    }
                    else
                    {
                        <a asp-area="Admin" asp-controller="Category" asp-action="ShowItemsOfCategory" asp-route-id="@category.Id">
                            <img src="@category.ImageURL" class="card-img-top"> 
                        </a>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        @*  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> *@
                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Изменить</a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Удалить</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
